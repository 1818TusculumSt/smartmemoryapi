# =============================================================================
# SMARTMEMORY 2.0 CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# PINECONE CONFIGURATION
# -----------------------------------------------------------------------------
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=smartmemory-v2

# -----------------------------------------------------------------------------
# LLM PROVIDER CONFIGURATION
# -----------------------------------------------------------------------------
LLM_API_URL=https://api.openai.com/v1/chat/completions
LLM_API_KEY=your-openai-api-key-here
LLM_MODEL=gpt-4o-mini

# -----------------------------------------------------------------------------
# EMBEDDING PROVIDER CONFIGURATION
# Options: "pinecone", "local", "api"
# -----------------------------------------------------------------------------
EMBEDDING_PROVIDER=pinecone
EMBEDDING_MODEL=llama-text-embed-v2

# Pinecone embedding models:
# - llama-text-embed-v2 - Supports 384/512/768/1024/2048 dims (configured in code)
# - multilingual-e5-large - 1024 dimensions only

# If using EMBEDDING_PROVIDER=api:
# EMBEDDING_API_URL=https://api.openai.com/v1/embeddings
# EMBEDDING_API_KEY=your-api-key
# EMBEDDING_MODEL=text-embedding-3-small

# If using EMBEDDING_PROVIDER=local:
# EMBEDDING_MODEL=all-MiniLM-L6-v2

# -----------------------------------------------------------------------------
# MEMORY MANAGEMENT SETTINGS
# -----------------------------------------------------------------------------
MAX_MEMORIES=1000
DEDUP_THRESHOLD=0.95
MIN_CONFIDENCE=0.6
RELEVANCE_THRESHOLD=0.65

# -----------------------------------------------------------------------------
# PERFORMANCE SETTINGS
# -----------------------------------------------------------------------------
MAX_RETRIES=3
RETRY_DELAY=1.0
LLM_TIMEOUT=60
EMBEDDING_TIMEOUT=30
CONNECTION_POOL_SIZE=100
KEEPALIVE_CONNECTIONS=20

# -----------------------------------------------------------------------------
# PAGINATION
# -----------------------------------------------------------------------------
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100

# -----------------------------------------------------------------------------
# BATCH OPERATIONS
# -----------------------------------------------------------------------------
MAX_BATCH_SIZE=1000

# -----------------------------------------------------------------------------
# MEMORY HISTORY (FUTURE FEATURE)
# -----------------------------------------------------------------------------
ENABLE_MEMORY_HISTORY=false
MAX_HISTORY_VERSIONS=10

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
